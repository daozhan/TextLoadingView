<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:textloadingview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.dao.textloadingview.TextLoadingView
            android:id="@+id/text_loading_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            textloadingview:loadingText="文字加载动画"
            textloadingview:loadingTextTopColor="#4BADE6"
            textloadingview:loadingTextBgColor="#CCCCCC"
            textloadingview:loadingTextSize="45sp"
            textloadingview:loadingTextAnimationTime="1500"
            textloadingview:loadingTextLineWidth="25dp"
            textloadingview:loadingTextIsInfinite="true"
            textloadingview:loadingTextOffsetDistance="35dp"
            textloadingview:loadingTextIsStartAnimation="false"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

        <Button
                android:id="@+id/start"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="开始"/>

        <Button
                android:id="@+id/stop"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="停止"/>
    </LinearLayout>


</RelativeLayout>